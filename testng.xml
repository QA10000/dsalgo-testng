<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RunTest" parallel="tests" thread-count="3">
	<listeners>
		<listener class-name="io.qameta.allure.testng.AllureTestNg" />
	   <listener class-name="utilities.RetryListener" />
	   <listener class-name="utilities.TestListener"/>


	</listeners>

	
	<test name="FirefoxTest_Registration">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="testCases.RegistrationTest" />
		</classes>
	</test>
	<test name="EdgeTest_Registration">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="testCases.RegistrationTest" />
		</classes>
	</test>
  <test name="FirefoxTest_Login">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="testCases.LoginTest" />
		</classes>
	</test>
	<test name="ChromeTest_Login">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="testCases.LoginTest" />
		</classes>
	</test>
	
    <test name="FirefoxTest_Stack">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="testCases.StackTest" />
		</classes>
	</test>
	<test name="ChromeTest_Stack">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="testCases.StackTest" />
		</classes>
	</test>
  
	
 </suite>